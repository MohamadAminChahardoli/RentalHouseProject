<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity = "center_horizontal|center_vertical"
    android:layout_margin="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_profile_user"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/iransans"
            android:gravity="center_horizontal"
            android:text="ورود مالکان"
            android:padding="5dp"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_edit_text_drawable"
            android:fontFamily="@font/iransans"
            android:gravity="center_horizontal|center_vertical"
            android:hint="شماره تلفن"
            android:inputType="number"
            android:maxLength="11"
            android:padding="5dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/register_edit_text_drawable"
            android:fontFamily="@font/iransans"
            android:gravity="center_horizontal|center_vertical"
            android:hint="گذرواژه"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/register_button_login_drawable"
            android:fontFamily="@font/iransans"
            android:paddingRight="35dp"
            android:text="ورود"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_create_account"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/iransans"
            android:text="حساب کاربری ندارم!"
            android:textColor="#F44336"
            android:textSize="16sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>