<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/owner_rec_registered_house_item_layout"
                android:padding="5dp">

    <ImageView
        android:id="@+id/img_owner_reg_house"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/house_img_border"
        android:padding="5dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/txt_owner_reg_house_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/img_owner_reg_house"
        android:fontFamily="@font/iransans"
        android:textColor="#000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/txt_owner_reg_house_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_owner_reg_house_title"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/img_owner_reg_house"
        android:fontFamily="@font/iransans"
        android:textColor="#000"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_owner_reg_house_delete"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/img_owner_reg_house"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_delete_register_house_drawable"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:padding="5dp"
        android:text="حذف"
        android:textColor="#fff"
        android:textSize="11sp"/>

    <Button
        android:id="@+id/btn_owner_reg_house_edit"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/img_owner_reg_house"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btn_owner_reg_house_delete"
        android:background="@drawable/btn_edit_regiter_house_drawable"
        android:fontFamily="@font/iransans"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:text="ویرایش"
        android:textColor="#fff"
        android:textSize="11sp"/>
</RelativeLayout>