<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    app:cardElevation="3dp"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_house_main_photo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/pic3"
            android:scaleType="centerCrop"
            android:transitionName="mainHousePhoto"/>

        <TextView
            android:id="@+id/txt_house_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_house_main_photo"
            android:text="عنوان خانه"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:textSize="18sp"
            android:gravity="right"
            android:textColor="@color/gray800"
            android:transitionName="houseTitle"/>

        <TextView
            android:id="@+id/txt_house_zone_and_registered_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_house_title"
            android:text="3 دقیقه پیش در عباس آباد"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:gravity="right"
            android:textColor="@color/gray500"
            android:transitionName="houseZoneAndTime"/>


        <TextView
            android:id="@+id/txt_house_mortgage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ودیعه:"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_below="@+id/txt_house_zone_and_registered_time"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray500"
            android:transitionName="houseMortgageLabel"/>

            <TextView
                android:id="@+id/txt_house_mortgage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مجانی"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:gravity="right"
                android:layout_below="@+id/txt_house_zone_and_registered_time"
                android:layout_toLeftOf="@+id/txt_house_mortgage_label"
                android:textColor="@color/gray500"
                android:transitionName="houseVisitedCount"/>


        <TextView
            android:id="@+id/txt_house_monthly_rent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اجاره:"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_below="@+id/txt_house_mortgage"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray500"
            android:transitionName="houseMonthlyRentLabel"/>

        <TextView
            android:id="@+id/txt_house_monthly_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="300,000"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_below="@+id/txt_house_mortgage"
            android:layout_toLeftOf="@+id/txt_house_monthly_rent_label"
            android:textColor="@color/gray500"
            android:transitionName="houseMonthlyRent"/>



        <Button
            android:id="@+id/btn_show_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مشاهده جزییات"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_blue_style"
            android:layout_below="@+id/txt_house_monthly_rent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>