<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.OwnerManagementActivity">



    <Button
        android:id="@+id/btn_add_house"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_add_new_house_drawable"
        android:fontFamily="@font/iransans"
        android:paddingRight="15dp"
        android:text="ثبت ملک جدید"
        android:textColor="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/divider_manage_section_drawable"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/txt_hello_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:padding="5dp"
        android:text="ملک های ثبت شده من"
        android:textColor="#000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_OwnerHouseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>


</LinearLayout>